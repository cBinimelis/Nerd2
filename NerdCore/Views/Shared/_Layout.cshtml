<!DOCTYPE html>
<html lang="es-cl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link id="favicon1" runat="server" rel="shortcut icon" href="~/img/Cat.ico" type="image/x-icon" />
    <title>@ViewData["Title"] - Ñoñopedia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/uikit.min.css" rel="stylesheet" />
    <link href="~/css/icofont.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>

    <div class="uk-position-top uk-light">
        <div uk-sticky="animation: uk-animation-slide-top; sel-target: .uk-navbar-container; cls-active: uk-navbar-sticky; cls-inactive: uk-navbar-transparent uk-light; top: 200">
            <nav class="uk-navbar-container" uk-navbar style="position: relative; background: repeating-linear-gradient(90deg, #f19bff, #ba55d3, #87cefa); z-index:980">

                <!--Menu Para dispositivos Moviles-->
                <div class="uk-navbar-left uk-hidden@m">
                    <a class="uk-navbar-toggle" href="#Menu" uk-navbar-toggle-icon uk-toggle></a>
                    <div id="Menu" uk-offcanvas="overlay: true; mode: reveal">
                        <div class="uk-offcanvas-bar uk-flex uk-flex-column" style="background: #ba55d3; opacity: 5">
                            <button class="uk-offcanvas-close" type="button" uk-close></button>
                            <ul class="uk-nav uk-nav-primary uk-nav-center uk-margin-auto-vertical">
                                <li>
                                    <a class="uk-text-bold" asp-area="" asp-controller="Animes" asp-action="Index">Anime</a>
                                </li>
                                <li>
                                    <a class="uk-text-bold" asp-area="" asp-controller="Mangas" asp-action="Index">Manga</a>
                                </li>
                                <li>
                                    <a class="uk-text-bold" asp-area="" asp-controller="Juegos" asp-action="Index">Juegos</a>
                                </li>
                                <li>
                                    <a class="uk-text-bold" asp-area="" asp-controller="Peliculas" asp-action="Index">Privacy</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="uk-navbar-right uk-hidden@m">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="uk-navbar-item uk-logo">
                        <img src="img/Cat.ico" style="height: 100%" alt="Logo" />
                    </a>
                </div>

                <!--Menu para navegadores-->
                <div class="uk-navbar-left uk-visible@m">
                </div>
                <div class="uk-container uk-container-expand">
                    <div>
                        <div class="uk-navbar-center uk-visible@m">
                            <div class="uk-navbar-center-left">
                                <div>
                                    <ul class="uk-navbar-nav">
                                        <li>
                                            <a class="uk-text-bold" asp-area="" asp-controller="Animes" asp-action="Index">Anime</a>
                                        </li>
                                        <li>
                                            <a class="uk-text-bold" asp-area="" asp-controller="Mangas" asp-action="Index">Manga</a>
                                        </li>
                                        <li>
                                            <a class="uk-text-bold" asp-area="" asp-controller="Juegos" asp-action="Index">Juegos</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="uk-navbar-item uk-logo">
                                <img src="~/img/pantsu.ico" style="height: 100%" alt="Logo" />
                            </a>
                            <div class="uk-navbar-center-right">
                                <div>
                                    <ul class="uk-navbar-nav">
                                        <li class="nav-item">
                                            <a class="uk-text-bold" asp-area="" asp-controller="Peliculas" asp-action="Index">Privacy</a>
                                        </li>
                                        <li>
                                            <a class="uk-text-bold" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    @RenderBody()

<script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/uikit.min.js"></script>
    <script src="~/js/uikit-icons.min.js"></script>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - NerdCore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
