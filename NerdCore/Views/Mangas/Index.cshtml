@model IEnumerable<NerdCore.Models.Manga>
@using NerdCore.Components

@{
    ViewData["Title"] = "Index";
    int Nerd = (int)ViewBag.Nerd;
}

<component type="typeof(MangaList)" render-mode="ServerPrerendered" param-Nerd="@Nerd" />
<script src="_framework/blazor.server.js"></script>


@if (@ViewBag.Success != null)
{
    <script type="text/javascript">
                     Swal.fire(
                    '¡Felicidades!',
                    '@ViewBag.Success',
                    'success'
                )
    </script>
}